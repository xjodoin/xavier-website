---
import type { Project } from '../data/projects';
import { projects } from '../data/projects';
const { heading = 'Open Source Projects', description = 'Selected repositories that show how I approach developer tooling, security, and data visualization.' } = Astro.props;
---
<section class="projects" id="projects">
  <div class="container">
    <div class="projects__header">
      <h2 class="section-title">{heading}</h2>
      <p class="lead">{description}</p>
    </div>
    <div class="projects__grid">
      {projects.map((project: Project) => (
        <article class="project-card">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <ul class="project-card__tags">
            {project.tags.map((tag) => (
              <li>{tag}</li>
            ))}
          </ul>
          <a class="project-card__link" href={project.link} target="_blank" rel="noreferrer">
            View on GitHub
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .projects {
    padding-block: clamp(3.5rem, 8vw, 5.5rem);
  }

  .projects__header {
    display: grid;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }

  .projects__grid {
    display: grid;
    gap: var(--space-5);
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .project-card {
    padding: var(--space-5);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
    display: grid;
    gap: var(--space-3);
  }

  .project-card h3 {
    margin: 0;
    font-size: var(--type-step2);
  }

  .project-card__tags {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding: 0;
    margin: 0;
  }

  .project-card__tags li {
    padding: 0.2rem 0.6rem;
    border-radius: 999px;
    background: color-mix(in srgb, var(--color-primary) 12%, transparent);
    color: var(--color-primary);
    font-size: var(--type-step-1);
    font-weight: 600;
  }

  .project-card__link {
    font-weight: 600;
    color: var(--color-primary);
  }

  .project-card__link:hover,
  .project-card__link:focus-visible {
    text-decoration: underline;
  }
</style>
