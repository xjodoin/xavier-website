---
import type { Project } from '../data/projects';
import { projects } from '../data/projects';
const {
  heading = 'Open Source Projects',
  description = 'Selected repositories that highlight my approach to developer tooling, secure infrastructure, and thoughtful data visualization.'
} = Astro.props;
---
<section class="projects" id="projects">
  <div class="container">
    <header class="projects__header">
      <p class="projects__eyebrow">Portfolio</p>
      <h2 class="section-title">{heading}</h2>
      <p class="lead">{description}</p>
    </header>
    <div class="projects__grid">
      {projects.map((project: Project, index: number) => (
        <article class="project-card glass" style={`--delay: ${index * 0.1}s`}>
          <div class="project-card__content">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <ul class="project-card__tags">
              {project.tags.map((tag) => (
                <li>{tag}</li>
              ))}
            </ul>
          </div>
          <a class="project-card__link" href={project.link} target="_blank" rel="noreferrer">
            <span>View repository</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
              <path d="M4 12L12 4M12 4H5M12 4V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .projects {
    padding-block: clamp(var(--space-16), 10vw, var(--space-24));
    position: relative;
  }

  .projects__header {
    text-align: center;
    max-width: 720px;
    margin-inline: auto;
    margin-bottom: var(--space-12);
  }

  .projects__eyebrow {
    font-size: var(--type-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    margin-bottom: var(--space-4);
  }

  .projects__header .lead {
    margin-inline: auto;
  }

  .projects__grid {
    display: grid;
    gap: var(--space-6);
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }

  .project-card {
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    animation: fadeInUp 0.6s var(--ease-out) var(--delay, 0s) backwards;
  }

  .project-card__content {
    flex: 1;
    display: grid;
    gap: var(--space-4);
  }

  .project-card h3 {
    font-size: var(--type-xl);
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .project-card p {
    margin: 0;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .project-card__tags {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding: 0;
    margin: 0;
    margin-top: auto;
  }

  .project-card__tags li {
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    background: rgba(0, 0, 0, 0.04);
    color: var(--color-muted);
    font-size: var(--type-xs);
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .project-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--type-sm);
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
    transition: gap var(--duration-fast) var(--ease-out);
  }

  .project-card__link:visited {
    color: var(--color-primary);
  }

  .project-card__link:hover {
    gap: var(--space-3);
  }

  .project-card__link svg {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .project-card__link:hover svg {
    transform: translate(2px, -2px);
  }

  @media (max-width: 640px) {
    .projects__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
