---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 3);
---
<section class="blog" id="blog">
  <div class="container">
    <header class="blog__header">
      <p class="blog__eyebrow">Insights</p>
      <h2 class="section-title">From the build log</h2>
      <p class="lead">Notes on AI product strategy, developer tooling, and the slower lessons learned outside the code editor.</p>
    </header>
    <div class="blog__grid">
      {posts.map((post, index) => (
        <article class="blog__card glass" style={`--delay: ${index * 0.1}s`}>
          <header class="blog__card-header">
            <time class="blog__date" datetime={post.data.publishDate.toISOString()}>
              {post.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
            </time>
            <ul class="blog__tags">
              {post.data.tags.slice(0, 2).map((tag) => (
                <li>{tag}</li>
              ))}
            </ul>
          </header>
          <h3>
            <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
          </h3>
          <p>{post.data.description}</p>
          <a href={`/blog/${post.slug}/`} class="blog__read-more">
            <span>Read article</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
              <path d="M6 3L11 8L6 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </article>
      ))}
    </div>
    <div class="blog__cta">
      <a class="btn btn-secondary" href="/blog">
        <span>View all posts</span>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M6 3L11 8L6 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .blog {
    padding-block: clamp(var(--space-16), 10vw, var(--space-24));
    position: relative;
  }

  .blog::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 0%, rgba(0, 113, 227, 0.02) 50%, transparent 100%);
    pointer-events: none;
  }

  .blog__header {
    text-align: center;
    max-width: 720px;
    margin-inline: auto;
    margin-bottom: var(--space-12);
    position: relative;
  }

  .blog__eyebrow {
    font-size: var(--type-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    margin-bottom: var(--space-4);
  }

  .blog__header .lead {
    margin-inline: auto;
  }

  .blog__grid {
    display: grid;
    gap: var(--space-6);
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    position: relative;
  }

  .blog__card {
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    animation: fadeInUp 0.6s var(--ease-out) var(--delay, 0s) backwards;
  }

  .blog__card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .blog__date {
    font-size: var(--type-sm);
    color: var(--color-muted);
    font-weight: 500;
  }

  .blog__tags {
    list-style: none;
    display: flex;
    gap: var(--space-2);
    padding: 0;
    margin: 0;
  }

  .blog__tags li {
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    background: rgba(0, 113, 227, 0.08);
    color: var(--color-primary);
    font-size: var(--type-xs);
    font-weight: 500;
  }

  .blog__card h3 {
    font-size: var(--type-xl);
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.02em;
    line-height: 1.3;
  }

  .blog__card h3 a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .blog__card h3 a:hover {
    color: var(--color-primary);
  }

  .blog__card h3 a:visited {
    color: var(--color-text);
  }

  .blog__card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }

  .blog__read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--type-sm);
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
    margin-top: auto;
    transition: gap var(--duration-fast) var(--ease-out);
  }

  .blog__read-more:visited {
    color: var(--color-primary);
  }

  .blog__read-more:hover {
    gap: var(--space-3);
  }

  .blog__read-more svg {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .blog__read-more:hover svg {
    transform: translateX(3px);
  }

  .blog__cta {
    margin-top: var(--space-12);
    display: flex;
    justify-content: center;
    position: relative;
  }

  @media (max-width: 640px) {
    .blog__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
